# Production Environment Variables Template
# Copy this to .env for production deployment

# Database
MONGODB_URI=your_mongodb_atlas_connection_string

# JWT Secrets (Generate new secure keys for production)
JWT_SECRET=your-super-secure-production-jwt-secret-key-minimum-32-characters-long
JWT_REFRESH_SECRET=your-super-secure-production-refresh-secret-key-minimum-32-characters-long

# Server Configuration
PORT=8001
NODE_ENV=production

# Client Configuration (Update with your frontend domain)
CLIENT_URL=https://your-frontend-domain.vercel.app

# Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=20